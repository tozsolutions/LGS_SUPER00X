# Production Environment Configuration
# Copy this file to .env.production and fill in the values

# Docker Configuration
REGISTRY=ghcr.io
IMAGE_NAME=tozsolutions/lgs_super00x
IMAGE_TAG=latest

# Database Configuration
POSTGRES_DB=lgs_super00x_prod
POSTGRES_USER=lgs_user_prod
POSTGRES_PASSWORD=super-secure-password-change-me

# Application URLs
NEXT_PUBLIC_API_URL=https://yourdomain.com/api
NEXTAUTH_URL=https://yourdomain.com

# Security Keys (CHANGE THESE!)
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
NEXTAUTH_SECRET=your-super-secret-nextauth-key-at-least-32-characters

# File Upload Configuration
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-email-password

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn-url